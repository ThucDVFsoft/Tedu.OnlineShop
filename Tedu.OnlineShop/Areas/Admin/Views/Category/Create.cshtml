@model Models.Framework.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Create New Category</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <form role="form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.Name)
                                    </label>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.Alias)
                                    </label>
                                    @Html.TextBoxFor(model => model.Alias, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Alias, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.ParentID)
                                    </label>
                                    @Html.TextBoxFor(model => model.ParentID, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.Order)
                                    </label>
                                    @Html.TextBoxFor(model => model.Order, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Order, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.Status)
                                    </label>
                                    <div>
                                        @Html.DropDownListFor(model => model.Status, new List<SelectListItem>()
                                           {
                                               new SelectListItem() {Selected = true, Text = "Kich hoat", Value = "true"},
                                               new SelectListItem() {Selected = false, Text = "Khoa", Value = "false"},
                                           }, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <p>
                                    <input type="submit" value="Create" class="btn btn-lg btn-success btn-block"/>
                                </p>
                            </form>
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>



